datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  proposals Proposal[]
}

model Proposal {
  id     Int   @id @default(autoincrement())
  clientName      String
  clientPhone     String
  clientDocument  String
  debtValue       Float
  economiaValue   Float
  indenizacaoValue Float
  proposalType    String
  proposalValue   Float
  status          String   @default("pendente")
  date            DateTime @default(now())
  notes           String?
  userId Int
  user   User  @relation(fields: [userId], references: [id])
}
